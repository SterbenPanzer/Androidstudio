<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.senac.projetinho.ui.Anime">


    <EditText
        android:id="@+id/editNomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite  o nome do anime."
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/editImagemAnimeView"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:srcCompat="@drawable/logo"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sinopseView"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="casual"
        android:text="Sinopse :"
        android:textAlignment="center"
        android:textColor="#111010"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editSinopseAnime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="7dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escreva a  sinopse do seu anime."
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temporadasView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Temporadas :"
            android:textColor="#111010"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTemporadasText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/episodiosView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Episodios :"
            android:textColor="#111010"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editEpisodiosText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dataLView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="casual"
            android:text="Data de LanÃ§amento :"
            android:textColor="#111010"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:ems="10"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dataEView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="casual"
            android:layout_weight="1"
            android:text="Data de Encerramento :"
            android:textColor="#111010"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dataETextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="6"
            android:text="Data E"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diretorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="Diretor :"
            android:textColor="#111010"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/diretorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="6"
            android:text="Nome do diretor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:backgroundTint="#00C853"
            android:fontFamily="casual"
            android:text="Updtate"
            android:textColor="#0F0D0D" />

        <Button
            android:id="@+id/buttonMinhasNotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="#0091EA"
            android:fontFamily="casual"
            android:text="Minhas Notas"
            android:textColor="#0F0D0D"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
