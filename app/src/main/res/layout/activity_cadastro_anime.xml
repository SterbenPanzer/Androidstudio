<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.senac.projetinho.ui.cadastroAnime">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <EditText
            android:id="@+id/editNomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite  o nome do anime."
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:textSize="24sp" />

            <ImageView
                android:id="@+id/editImagemAnimeView"
                android:layout_width="317dp"
                android:layout_height="220dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"
                android:onClick="tirarFotoAnime"
                app:srcCompat="@drawable/logo"
                tools:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/sinopseView"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="7dp"
            android:fontFamily="casual"
            android:text="Sinopse :"
            android:textAlignment="center"
            android:textColor="#111010"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editSinopseAnime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Escreva a  sinopse do seu anime."
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temporadasView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="Temporadas :"
                android:textColor="#111010"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTemporadasText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/episodiosView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Episodios :"
                android:textColor="#111010"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editEpisodiosText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataLView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="Data de LanÃ§amento :"
                android:textColor="#111010"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editDataLText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openCalendar"
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dataEView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="Data de Encerramento :"
                android:textColor="#111010"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editDataEText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openCalendar2"
                android:focusable="false"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diretorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="Diretor :"
                android:textColor="#111010"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editDiretorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Example(Miyamoto Tsui...)"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDeletarAnime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:backgroundTint="#D50000"
                android:fontFamily="casual"
                android:text="Deletar"
                android:textColor="#0F0D0D" />

            <Button
                android:id="@+id/buttonSalvarAnime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:onClick="salvarAnime"
                android:layout_weight="1"
                android:backgroundTint="#64DD17"
                android:fontFamily="casual"
                android:text="Salvar"
                android:textColor="#0F0D0D"
                android:textSize="14sp" />
        </LinearLayout>
</LinearLayout>
    </ScrollView>



</LinearLayout>
